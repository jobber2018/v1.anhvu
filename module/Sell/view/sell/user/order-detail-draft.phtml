    function removeProduct(id){
        // console.log("removed sell");
        run_waitMe();
        var url = "<?=$this->url('sell-user',['action'=>'delete-product-order-draft'])?>";
        $.ajax({
            headers: {Accept: "application/json; charset=utf-8"},
            method: "POST",
            url: url,
