    function deleteOrderDraft(oId){
        let text = "Nếu nhấn OK đơn hàng sẽ bị xoá mà không thể khôi phục lại. Nếu chưa chắc bạn có thể nhấn Cancel.";
        if (confirm(text) == true) {
            run_waitMe();
            var url = "<?=$this->url('sell-user',['action'=>'delete-order-draft'])?>";
            $.ajax({
                headers: {Accept: "application/json; charset=utf-8"},
                method: "POST",
                url: url,
                data: {id:oId}
            }).done(function (data) {
                if(data.status){
                    alert('Đã xoá đơn hàng <?=$this->sellOrder->getOrderCode()?>: <?=$this->sellOrder->getGrocery()->getGroceryName()?>!');
                    window.location.href = '<?=$this->url('user-dashboard')?>';
                }
                else{
                    alert(data.msg);
                    stop_waitMe();
                }
            })
        }
    }

    function formatCurrency(value){
        var result=0;
        if (value && value.length >3){
            var numFormat = new Intl.NumberFormat("en-US");
            result= numFormat.format(value.replaceAll( ",","" ));
        }else{
            result= value;
        }
        return result;
    }
